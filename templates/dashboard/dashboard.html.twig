{% extends 'base.html.twig' %}

{% block title %}User Dashboard{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_sign_out') }}">Log out</a>
        </div>
    {% endif %}

    <h1>As admin you have superuser rights</h1>

    Take advantage of this functionality:
    <ul>
        <li><a href="/manufacturer">Manufacturers management</a></li>
        <li><a href="/phone">Phones management</a></li>
    </ul>
</div>
{% endblock %}
